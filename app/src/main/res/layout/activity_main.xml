<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/login_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="17dp"
            android:text="登录"
            android:textSize="20sp"
            android:textColor="#0f0000">
        </TextView>

        <TextView
            android:id="@+id/login_saw_1"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_below="@+id/login_bar"
            android:layout_marginTop="15dp"
            android:background="#0f0000">
        </TextView>

        <ImageView
            android:id="@+id/login_imagelogo"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/login_saw_1"
            android:layout_marginTop="60dp"
            android:background="@drawable/ic_launcher_round">
        </ImageView>

        <EditText
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="80dp"
            android:layout_below="@+id/login_imagelogo"
            android:hint="手机号">
        </EditText>

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/login"
            android:layout_marginTop="15dp"
            android:hint="密码">
        </EditText>
    </RelativeLayout>
</LinearLayout>